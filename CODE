#include <iostream>
using namespace std;

int main() {
int num1, num2, sum;

sum = 0;
cout <<"Give me a number"<< endl;
cin >> num1;

cout << "Give me another number" << endl;
cin >>num2;

if (num1 > num2){

while (num1 >= num2){
  sum = num1 + sum;
  num1 = num1 - 1;
}
cout <<"The sum of the numbers in that range is: " << sum << endl;
}

else {

while (num2 >= num1){
sum = num2 + sum;
num2 = num2 -1;
}
cout <<"The sum of the numbers in that range is: "<< sum << endl;

}

return 0;
}
